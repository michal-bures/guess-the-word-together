{
  "name": "guess-the-word",
  "version": "1.0.0",
  "description": "Collaborative word guessing game.",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "eslint": "^9.33.0",
      "prettier": "^3.6.2",
      "typescript": "^5.9.2",
      "typescript-eslint": "^8.39.1",
      "vite": "^7.1.2",
      "vitest": "^3.2.4",
      "@eslint/js": "^9.33.0",
      "eslint-config-prettier": "^10.1.8",
      "@vitejs/plugin-react": "^5.0.0",
      "eslint-plugin-unused-imports": "^4.1.4",
      "@vitest/ui": "^3.2.4"
    }
  },
  "scripts": {
    "dev": "concurrently --names \"frontend,backend\" \"bun run --filter=frontend dev\" \"bun run --filter=backend dev\"",
    "build": "bun run --filter '*' build",
    "lint": "bun run  --filter '*' lint",
    "lint:check": "bun run --filter '*' lint:check",
    "format": "bun run --filter '*' format",
    "format:check": "bun run --filter '*' format:check",
    "test": "bun run --filter '*' test:run",
    "checks": "bun run lint && bun run format && bun run test",
    "checks:ci": "bun run lint:check && bun run format:check && bun run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michal-bures/guess-the-word-together.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/michal-bures/guess-the-word-together/issues"
  },
  "homepage": "https://github.com/michal-bures/guess-the-word-together#readme"
}
