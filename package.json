{
  "name": "guess-the-word",
  "version": "1.0.0",
  "description": "Collaborative word guessing game.",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"frontend,backend,shared\" \"bun run --filter=frontend dev\" \"bun run --filter=backend dev\" \"bun run --filter=shared dev\"",
    "build": "bun run build --filter '*'",
    "lint": "bun run lint --filter '*'",
    "lint:check": "bun run lint:check --filter '*'",
    "format": "bun run format --filter '*'",
    "format:check": "bun run format:check --filter '*'",
    "test": "bun run test --filter '*'",
    "test:run": "bun run test:run --filter '*'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michal-bures/guess-the-word-together.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/michal-bures/guess-the-word-together/issues"
  },
  "homepage": "https://github.com/michal-bures/guess-the-word-together#readme"
}
